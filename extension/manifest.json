{
  "manifest_version": 3,
  "name": "AutoPurge",
  "version": "1.0.0",
  "description": "Automatically purge browsing history for specified domains after navigation",
  
  "permissions": [
    "history",
    "storage",
    "tabs",
    "webNavigation",
    "activeTab"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["data/preset-domains.json"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "options_page": "options.html",
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoPurge - History Cleaner"
  },
  
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
